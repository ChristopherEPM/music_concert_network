<h1>New Concert form</h1>
<%= flash_message %>
<% if @errors #@entry.errors.any?%>
  <ul>
    <% @errors.each do |error|%>
    <li><%= error %></li>
    <%end %>
  </ul>
<%end %>
<%= form_for @concert  do |f| %>
  <%= f.label :artist %>
  <%= f.text_field :artist %>
  <br>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :venue %>
  <%= f.text_field :venue, size: 40%>
  <br>
  <%= f.label :price %>
  <%= f.number_field :price, in: 10.00..100.00, step: 0.01%> â‚¬
  <br>
  <%= f.label :date %>
  <%= f.datetime_select :date %>
  <br>
  <%= f.label :description %><br>
  <%= f.text_area :description, size: "60x12" %>
  <br>
  <%= f.submit 'Save Concert' %>
  <br>
  <%= link_to "Back to concert index",concerts_path %>

  <% end %>
